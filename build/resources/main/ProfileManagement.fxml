<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafiles.gui.ProfileManagementController">

    <top>
        <Button onAction="#handleBack" text="Back" BorderPane.alignment="TOP_LEFT">
            <BorderPane.margin>
                <Insets left="10" top="10" />
            </BorderPane.margin>
        </Button>
    </top>

    <center>
      <VBox>
         <children>
            <HBox prefHeight="0.0" prefWidth="579.0">
               <children>
                  <Label contentDisplay="TEXT_ONLY" prefHeight="44.0" prefWidth="62.0" text="Dealer ID:" />
                  <ComboBox fx:id="dealerComboBox" prefWidth="150.0" promptText="Select Dealership" />
                  <Label prefHeight="26.0" prefWidth="81.0" text="Dealer Name:">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </Label>
                  <Label fx:id="dealerNameLabel" prefHeight="26.0" prefWidth="95.0" text="" />
                  <Button mnemonicParsing="false" text="Edit Dealership Name" onAction="#handleEditDealershipName" />
               </children>
            </HBox>
              <TableView fx:id="dealershipTable" prefHeight="400" prefWidth="600">
                  <columns>
                      <TableColumn fx:id="idColumn" text="ID" />
                      <TableColumn fx:id="nameColumn" text="Dealership Name" />
                      <TableColumn fx:id="receivingColumn" text="Receiving Enabled" />
                      <TableColumn fx:id="rentingColumn" text="Renting Enabled" />
                  </columns>
              </TableView>
         </children>
      </VBox>
    </center>

    <bottom>
        <GridPane alignment="CENTER" hgap="20" vgap="20">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <children>
                <Button minWidth="180" onAction="#handleEditDealershipName" text="Edit Dealership Name" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <padding>
                        <Insets bottom="10" left="20" right="20" top="10" />
                    </padding>
                </Button>
                <Button minWidth="180" onAction="#handleAddDealership" text="Add a Dealership" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <padding>
                        <Insets bottom="10" left="20" right="20" top="10" />
                    </padding>
                </Button>
                <Button minWidth="180" onAction="#handleChangeReceivingStatus" text="Change Receiving Status" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <padding>
                        <Insets bottom="10" left="20" right="20" top="10" />
                    </padding>
                </Button>
                <Button minWidth="180" onAction="#handleChangeRentalStatus" text="Change Rental Status" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <padding>
                        <Insets bottom="10" left="20" right="20" top="10" />
                    </padding>
                </Button>
            </children>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </bottom>

</BorderPane>
